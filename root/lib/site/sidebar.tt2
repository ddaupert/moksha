[% IF c.user %]
<h3>Welcome [% c.user.fname %]</h3>
[% SET users_id = c.stash.user_id %]
<p><a href="[% c.uri_for("/users/$users_id/profile") %]">My Profile</a></p>
<p><a href="[% c.uri_for('/logout') %]">Logout</a></p>
[% ELSE %]
<p><a href="[% c.uri_for('/login') %]">Login</a></p>
<p><a href="[% c.uri_for('/users/pwforgot') %]">Forgot Password?</a></p>
<p><a href="[% c.uri_for('/registration/register') %]">Register</a></p>
[% END %]
